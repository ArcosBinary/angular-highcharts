{
  "name": "angular-highcharts",
  "version": "0.5.1",
  "description": "Highcharts Directive for Angular2",
  "scripts": {
    "prepublish": "typings install && npm run build",
    "clean": "rimraf index.js index.d.ts src/**/*.js src/**/*.d.ts",
    "build": "tsc",
    "lint": "tslint src/**/*.ts",
    "typings": "typings",
    "typings-upgrade": "typings ls | awk '$2 ~ /.+/ {print $2}' | xargs -I {} typings i dt~{} -SG",
    "test": "npm run lint"
  },
  "author": "Felix Itzenplitz",
  "repository": {
    "type": "git",
    "url": "https://github.com/cebor/angular-highcharts.git"
  },
  "keywords": [
    "angular2",
    "ng2",
    "highcharts",
    "chart",
    "directive",
    "component"
  ],
  "license": "MIT",
  "devDependencies": {
    "@angular/core": "2.0.0-rc.4",
    "rimraf": "^2.5.2",
    "rxjs": "5.0.0-beta.6",
    "tslint": "^3.13.0",
    "typescript": "^1.8.10",
    "typings": "^1.3.1",
    "zone.js": "^0.6.12"
  }
}
